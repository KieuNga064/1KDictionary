<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".luyentap.QuizActivity"
    android:background="#FFF9C4"
    android:padding="16dp">
    <TextView
        android:id="@+id/txtFolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Folder"
        android:textSize="25dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        android:layout_below="@+id/txtFolderName"/>
    <TextView
        android:id="@+id/txtQuestion_Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question: 1/x"
        android:textColor="@color/black"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/txtScore" />

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here will be question text"
        android:layout_below="@id/txtQuestion_Count"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"/>


    <EditText
        android:id="@+id/edtAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/txtQuestion"
        android:ems="15"
        android:hint="YourAnswer"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtKetQua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/edtAnswer"/>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_below="@id/txtKetQua"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:layout_marginRight="20dp"
            android:background="@drawable/shapebutton"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:background="@drawable/shapebutton"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</RelativeLayout>